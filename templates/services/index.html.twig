{% extends 'base.html.twig' %}

{% block title %}Hello ServicesController!{% endblock %}

{% block body %}
    <h1>Services</h1>

    <div class="card-deck container-fluid">
        {% for service in services %}
            <div class="card col-6 col-md-3">
                <img src="{{ asset('Pictures/upload/service/') ~ service.picture }}" class="card-img-top" alt="{{ service.title }}">
                <div class="card-body">
                    <h5 class="card-title">{{ service.title }}</h5>
                    <p class="card-text">{{ service.content|raw }}</p> 
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
