<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {# Feuille de styles #}

    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" />
    {% block stylesheets %}
    <style>
      body {
        height: 100vh;
        background-image: linear-gradient(
          to bottom,
          rgb(131, 139, 194),
          rgb(84, 98, 162),
          rgba(85, 17, 116, 0.79),
          rgb(115, 81, 141),
          rgb(113, 92, 140)
        );
      }

      header img {
        max-height: 120px;
      }

      .active {
        background-color: #007bff;
        color: #fff;
      }
    </style>
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}" />

    {# Fichiers JS #}

    <script
      src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"
      defer
    ></script>
    {% block javascripts %}{% endblock %}
    <script src="{{ asset('assets/js/scripts.js') }}" defer></script>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <a class="navbar-brand" href="{{ path('acceuil') }}">
          <img
            src="{{ asset('Pictures/garage-v-parrot-logo.png') }}"
            alt="Logo"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li
              class="nav-item {{
                app.request.attributes.get('_route') == 'acceuil'
                  ? 'active'
                  : ''
              }}"
            >
              <a class="nav-link" href="{{ path('acceuil') }}">Accueil</a>
            </li>
            <li
              class="nav-item {{
                app.request.attributes.get('_route') == 'services'
                  ? 'active'
                  : ''
              }}"
            >
              <a class="nav-link" href="{{ path('services') }}">Services</a>
            </li>
            <li
              class="nav-item {{
                app.request.attributes.get('_route') == 'vehicules'
                  ? 'active'
                  : ''
              }}"
            >
              <a class="nav-link" href="{{ path('vehicules') }}">Véhicules</a>
            </li>
            <li
              class="nav-item {{
                app.request.attributes.get('_route') == 'contact'
                  ? 'active'
                  : ''
              }}"
            >
              <a class="nav-link" href="{{ path('contact') }}">Contact</a>
            </li>
            <!-- Ajoutez d'autres éléments de menu ici avec vos routes personnalisées -->
          </ul>
        </div>
      </nav>
    </header>
  </body>
  {% block body %}{% endblock %}
</html>
